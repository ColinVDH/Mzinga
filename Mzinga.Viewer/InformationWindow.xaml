<Window x:Class="Mzinga.Viewer.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="{DynamicResource MzingaIcon}"
        Title="{Binding Title}" WindowStartupLocation="CenterScreen" Width="480" MinHeight="100" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource InformationIcon32}" Margin="15" VerticalAlignment="Top" />
            <Label Height="Auto" Width="390" Margin="5" VerticalAlignment="Center">
                <Label.Content>
                    <AccessText TextWrapping="Wrap" Text="{Binding Message}"/>
                </Label.Content>
            </Label>
        </StackPanel>
        <WrapPanel FlowDirection="RightToLeft">
            <Button Command="{Binding Accept}" Content="OK" Width="75" Margin="5" IsDefault="True" Style="{DynamicResource CleanButton}" />
        </WrapPanel>
    </StackPanel>
</Window>
